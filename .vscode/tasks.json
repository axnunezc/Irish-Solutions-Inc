{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build all files",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${fileDirname}/IrishSolutionsInc.cpp",  // Specify the main source file
                "${fileDirname}/GUIFile.cpp",            // Include GUIFile.cpp
                "-F/Library/Frameworks",
                "-framework",
                "SDL2",
                "-I/Library/Frameworks/SDL2.framework/Versions/A/Headers",
                "-o",
                "${fileDirname}/IrishSolutionsInc"       // Specify output file
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}
